@model InventoryManager.Models.Inventory

@{
    ViewData["Title"] = "Создать инвентарь";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h2 class="fw-bold mb-4">
                    <i class="bi bi-plus-circle text-primary"></i> Новый инвентарь
                </h2>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold">Название</label>
                        <input asp-for="Name" class="form-control" placeholder="Например: Офисные ноутбуки" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold">Описание</label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                                  placeholder="Краткое описание инвентаря..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label fw-semibold">Категория</label>
                        <select asp-for="Category" class="form-select">
                            <option value="Equipment">Оборудование</option>
                            <option value="Books">Книги</option>
                            <option value="Furniture">Мебель</option>
                            <option value="Other">Другое</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="IsPublic" class="form-check-input" type="checkbox" />
                            <label asp-for="IsPublic" class="form-check-label">
                                Публичный инвентарь (все пользователи могут добавлять предметы)
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save"></i> Создать
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-x-lg"></i> Отмена
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}