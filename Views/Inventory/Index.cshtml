@model IEnumerable<InventoryManager.Models.Inventory>

@{
    ViewData["Title"] = "Мои инвентари";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Мои инвентари</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-plus-lg me-1"></i> Создать инвентарь
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-inbox display-1 text-muted"></i>
            </div>
            <h5 class="text-muted">У вас пока нет инвентарей</h5>
            <p class="text-muted small">Нажмите "Создать инвентарь" чтобы начать</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var inventory in Model)
            {
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold mb-0">@inventory.Name</h5>
                                @if (inventory.IsPublic)
                                {
                                    <span class="badge bg-success-subtle text-success rounded-pill">
                                        <i class="bi bi-globe me-1"></i>Публичный
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary rounded-pill">
                                        <i class="bi bi-lock me-1"></i>Приватный
                                    </span>
                                }
                            </div>

                            <span class="badge bg-primary-subtle text-primary rounded-pill mb-2">
                                <i class="bi bi-tag me-1"></i>@inventory.Category
                            </span>

                            @if (!string.IsNullOrEmpty(inventory.Description))
                            {
                                <p class="card-text text-muted small">@inventory.Description</p>
                            }

                            <p class="text-muted small mt-2 mb-0">
                                <i class="bi bi-clock me-1"></i>@inventory.CreatedAt.ToString("dd.MM.yyyy")
                            </p>
                        </div>

                        <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-3">
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-inventoryId="@inventory.Id"
                                       class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                    <i class="bi bi-pencil me-1"></i>Изменить
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="inventoryId" value="@inventory.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3"
                                            onclick="return confirm('Удалить инвентарь?')">
                                        <i class="bi bi-trash me-1"></i>Удалить
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>
