@model InventoryManager.Models.Inventory
@{
    ViewData["Title"] = "Редактировать инвентарь";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h2 class="fw-bold mb-0">Редактировать инвентарь</h2>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedById" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="Version" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium">Название</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-medium">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label fw-medium">Категория</label>
                            <select asp-for="Category" asp-items="ViewBag.Categories" class="form-select"></select>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsPublic" class="form-check-input" type="checkbox" role="switch" />
                                <label asp-for="IsPublic" class="form-check-label">Публичный инвентарь</label>
                            </div>
                        </div>

                        <hr />
                        <h5 class="fw-bold mb-3">Кастомные поля</h5>

                        @* String fields *@
                        <div class="mb-3 p-3 border rounded">
                            <h6 class="text-muted">Текстовые поля</h6>
                            @for (int i = 1; i <= 3; i++)
                            {
                                var stateProp = $"CustomString{i}State";
                                var nameProp = $"CustomString{i}Name";
                                <div class="d-flex align-items-center gap-3 mb-2">
                                    <div class="form-check form-switch mb-0">
                                        <input type="checkbox" name="@stateProp" class="form-check-input" role="switch"
                                        @(((bool?)Model.GetType().GetProperty(stateProp)?.GetValue(Model) == true) ?
                                                                     "checked" : "") />
                                    </div>
                                    <input type="text" name="@nameProp" class="form-control form-control-sm"
                                           placeholder="Название поля @i"
                                           value="@Model.GetType().GetProperty(nameProp)?.GetValue(Model)" />
                                </div>
                            }
                        </div>

                        @* Text fields *@
                        <div class="mb-3 p-3 border rounded">
                            <h6 class="text-muted">Многострочные поля</h6>
                            @for (int i = 1; i <= 3; i++)
                            {
                                var stateProp = $"CustomText{i}State";
                                var nameProp = $"CustomText{i}Name";
                                <div class="d-flex align-items-center gap-3 mb-2">
                                    <div class="form-check form-switch mb-0">
                                        <input type="checkbox" name="@stateProp" class="form-check-input" role="switch"
                                        @(((bool?)Model.GetType().GetProperty(stateProp)?.GetValue(Model) == true) ?
                                                                 "checked" : "") />
                                    </div>
                                    <input type="text" name="@nameProp" class="form-control form-control-sm"
                                           placeholder="Название поля @i"
                                           value="@Model.GetType().GetProperty(nameProp)?.GetValue(Model)" />
                                </div>
                            }
                        </div>

                        @* Number fields *@
                        <div class="mb-3 p-3 border rounded">
                            <h6 class="text-muted">Числовые поля</h6>
                            @for (int i = 1; i <= 3; i++)
                            {
                                var stateProp = $"CustomInt{i}State";
                                var nameProp = $"CustomInt{i}Name";
                                <div class="d-flex align-items-center gap-3 mb-2">
                                    <div class="form-check form-switch mb-0">
                                        <input type="checkbox" name="@stateProp" class="form-check-input" role="switch"
                                        @(((bool?)Model.GetType().GetProperty(stateProp)?.GetValue(Model) == true) ?
                                                            "checked" : "") />
                                    </div>
                                    <input type="text" name="@nameProp" class="form-control form-control-sm"
                                           placeholder="Название поля @i"
                                           value="@Model.GetType().GetProperty(nameProp)?.GetValue(Model)" />
                                </div>
                            }
                        </div>

                        @* Bool fields *@
                        <div class="mb-3 p-3 border rounded">
                            <h6 class="text-muted">Чекбокс поля</h6>
                            @for (int i = 1; i <= 3; i++)
                            {
                                var stateProp = $"CustomBool{i}State";
                                var nameProp = $"CustomBool{i}Name";
                                <div class="d-flex align-items-center gap-3 mb-2">
                                    <div class="form-check form-switch mb-0">
                                        <input type="checkbox" name="@stateProp" class="form-check-input" role="switch"
                                        @(((bool?)Model.GetType().GetProperty(stateProp)?.GetValue(Model) == true) ?
                                                        "checked" : "") />
                                    </div>
                                    <input type="text" name="@nameProp" class="form-control form-control-sm"
                                           placeholder="Название поля @i"
                                           value="@Model.GetType().GetProperty(nameProp)?.GetValue(Model)" />
                                </div>
                            }
                        </div>

                        @* Link fields *@
                        <div class="mb-3 p-3 border rounded">
                            <h6 class="text-muted">Ссылки</h6>
                            @for (int i = 1; i <= 3; i++)
                            {
                                var stateProp = $"CustomLink{i}State";
                                var nameProp = $"CustomLink{i}Name";
                                <div class="d-flex align-items-center gap-3 mb-2">
                                    <div class="form-check form-switch mb-0">
                                        <input type="checkbox" name="@stateProp" class="form-check-input" role="switch"
                                        @(((bool?)Model.GetType().GetProperty(stateProp)?.GetValue(Model) == true) ?
                                                   "checked" : "") />
                                    </div>
                                    <input type="text" name="@nameProp" class="form-control form-control-sm"
                                           placeholder="Название поля @i"
                                           value="@Model.GetType().GetProperty(nameProp)?.GetValue(Model)" />
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="bi bi-check-lg me-1"></i> Сохранить
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Отмена</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}