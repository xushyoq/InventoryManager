@{
    ViewData["Title"] = "Панель управления";
}

<div class="container py-4">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="p-5 mb-4 bg-light rounded-3 shadow-sm border-0"
             style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
            <div class="container-fluid py-3">
                <h1 class="display-5 fw-bold text-dark">С возвращением, @User.Identity.Name! 👋</h1>
                <p class="col-md-8 fs-4 text-muted">Ваш инвентарь под контролем. Просматривайте, добавляйте и управляйте
                    вещами в одном месте.</p>
                    <button class="btn btn-primary btn-lg rounded-pill px-4" type="button">
                        <i class="bi bi-plus-lg"></i> Добавить предмет
                    </button>
                </div>
            </div>

            <div class="row g-4 mt-2">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                                    <i class="bi bi-box text-primary fs-3"></i>
                                </div>
                                <h5 class="card-title mb-0">Всего предметов</h5>
                            </div>
                            <h2 class="fw-bold">0</h2>
                            <p class="text-muted small">Начните наполнять ваш склад</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-success bg-opacity-10 p-3 rounded-3 me-3">
                                    <i class="bi bi-tags text-success fs-3"></i>
                                </div>
                                <h5 class="card-title mb-0">Категории</h5>
                            </div>
                            <h2 class="fw-bold">0</h2>
                            <p class="text-muted small">Группируйте вещи по типам</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-warning bg-opacity-10 p-3 rounded-3 me-3">
                                    <i class="bi bi-clock-history text-warning fs-3"></i>
                                </div>
                                <h5 class="card-title mb-0">Последние действия</h5>
                            </div>
                            <p class="text-muted">История активности пока пуста</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    else
        {
            <div class="text-center py-5 mt-5">
                <div class="mb-4">
                    <i class="bi bi-safe2 display-1 text-primary"></i>
                </div>
                <h1 class="display-3 fw-bold">Inventory Manager</h1>
                <p class="lead text-muted mb-4">Умный способ вести учет ваших вещей и оборудования.</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-5 rounded-pill shadow">
                        Начать работу
                    </a>
                    <a href="#" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                        Узнать больше
                    </a>
                </div>
            </div>
        }
    </div>